{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./apps",
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "paths": {
      "@train-train/*": ["train-train/*"],
      "@djld-train/*": ["darjeeling.ltd/train-data/*"],
      "@djld-ref/*": ["darjeeling.ltd/booking-reference/*"],
    }
  }
}
